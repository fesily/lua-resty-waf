{
    "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "target": "esnext",
      "moduleResolution": "Node",
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "isolatedModules": false,
      "strict": true,
      "useUnknownInCatchVariables": false,
      "inlineSourceMap": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}